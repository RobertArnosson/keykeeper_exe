<PasswordTextField>:
    size_hint_y: None
    height: text_field.height

    CredInputP:
        id: text_field
        size_hint_x: 1
        hint_text: root.hint_text
        multiline: False
        allow_copy: False
        write_tab: False
        text: root.text
        password: True
        icon_left: "key-variant"
        password_mask: "â€¢"
        font_style: 'Subtitle1'

    MDIconButton:
        icon: "eye-off"
        theme_icon_color: "Custom"
        icon_color: app.theme_cls.disabled_hint_text_color
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            self.icon_color = app.theme_cls.primary_color if self.icon == "eye" else app.theme_cls.disabled_hint_text_color
            text_field.password = False if text_field.password is True else True

<LoginScreen>
    MDGridLayout:
        cols: 1
        size: root.width, root.height

        MDGridLayout:
            cols: 1
            size_hint: 1, 0.25
            size_hint_max_y: 200

            MDLabel:
                text: "Login to your account"
                font_style: 'H3'
                halign: 'center'

        MDAnchorLayout:
            size_hint: 1, 1
            anchor_x: 'center'
            anchor_y: 'center'

            MDBoxLayout:
                orientation: "vertical"
                padding: 20
                size_hint: 0.35, None
                height: self.minimum_height
                size_hint_max_x: 550
                pos_hint: {"center_x": .5, "center_y": .5}
                elevation: 4
                shadow_radius: 6
                shadow_offset: 0, 2

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: self.minimum_height
                    spacing: dp(20)
                    padding: dp(20)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDTextField:
                        id: name
                        icon_left: 'pound'
                        theme_icon_color: "Custom"
                        multiline: False
                        allow_copy: False
                        write_tab: False
                        hint_text: "Name"
                        size_hint_x: 1
                        font_style: 'Subtitle1'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    PasswordTextField:
                        id: password
                        hint_text: "Password"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDBoxLayout:
                        size_hint: 1, None
                        height: 2

                        MDBoxLayout:
                            size_hint: 1, None
                            height: 2
                            md_bg_color: app.theme_cls.bg_dark

                    MDRectangleFlatButton:
                        id: loginbtn
                        text: "Login"
                        font_style: 'H5'
                        size_hint: 1, 0.5
                        size_hint_max_y: 60
                        size_hint_min_y: 30
                        size_hint_max_x: 250
                        ripple_scale: 0
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        on_release:
                            root.start_check_login()

    MDFloatLayout:
        size_hint: 1, 1

        MDAnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            padding: 50

            MDFloatingActionButton:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                icon: 'account-plus'
                icon_color: app.theme_cls.bg_normal
                ripple_scale: 0
                on_release: root.goto_screen('signup', 'left')
