<PasswordTextFieldL>:
    size_hint_y: None
    height: text_field.height

    CredInputPL:
        id: text_field
        icon_left: 'key-variant'
        theme_icon_color: "Custom"
        icon_left_color: self.theme_cls.primary_color
        multiline: False
        allow_copy: False
        write_tab: False
        password: True
        password_mask: "â€¢"
        hint_text: "Password"
        size_hint_x: 1
        font_style: 'Subtitle1'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        

    MDIconButton:
        icon: "eye-off"
        theme_icon_color: "Custom"
        icon_color: app.theme_cls.disabled_hint_text_color
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            self.icon_color = app.theme_cls.primary_color if self.icon == "eye" else app.theme_cls.disabled_hint_text_color
            text_field.password = False if text_field.password is True else True

<LoginScreen>
    MDGridLayout:
        cols: 1
        size: root.width, root.height

        MDAnchorLayout:
            size_hint: 1, 1
            anchor_x: 'center'
            anchor_y: 'center'

            MDCard:
                padding: 4
                size_hint: None, None
                width: 375
                height: self.minimum_height
                md_bg_color: [app.theme_cls.bg_normal[0] + 0.01, app.theme_cls.bg_normal[1] + 0.01, app.theme_cls.bg_normal[2] + 0.01, 1]

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: self.minimum_height
                    spacing: dp(30)
                    padding: dp(30)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDLabel:
                        text: "Login"
                        font_style: 'H4'
                        halign: 'center'
                        size_hint: 1, None
                        height: 70

                    MDTextField:
                        id: name
                        icon_left: 'pound'
                        theme_icon_color: "Custom"
                        multiline: False
                        allow_copy: False
                        write_tab: False
                        hint_text: "Name"
                        size_hint_x: 1
                        font_style: 'Subtitle1'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    PasswordTextFieldL:
                        id: password
                        hint_text: "Password"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDBoxLayout:
                        size_hint: 1, None
                        height: 10

                    MDRectangleFlatButton:
                        id: loginbtn
                        text: "Login"
                        font_style: 'H5'
                        size_hint: 1, 0.5
                        size_hint_max_y: 60
                        size_hint_min_y: 30
                        size_hint_max_x: 250
                        ripple_scale: 0
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        on_release:
                            root.start_check_login()

    MDFloatLayout:
        size_hint: 1, 1

        MDAnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            padding: 50

            MDFloatingActionButton:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                icon: 'account-plus'
                icon_color: app.theme_cls.bg_normal
                ripple_scale: 0
                on_release: root.goto_screen('signup', 'left')
